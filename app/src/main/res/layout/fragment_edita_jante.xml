<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditaJanteFragment" >

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNomeJante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margem_campos"
            android:layout_marginLeft="@dimen/margem_campos"
            android:layout_marginTop="@dimen/margem_campos"
            android:layout_marginEnd="@dimen/margem_campos"
            android:layout_marginRight="@dimen/margem_campos"
            android:hint="@string/nomejante"
            android:inputType="text" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLargura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_campos"
                android:layout_marginLeft="@dimen/margem_campos"
                android:layout_marginTop="@dimen/margem_campos"
                android:layout_marginEnd="@dimen/margem_campos"
                android:layout_marginRight="@dimen/margem_campos"
                android:hint="@string/largura"
                android:inputType="number" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_campos"
                    android:layout_marginLeft="@dimen/margem_campos"
                    android:layout_marginTop="@dimen/margem_campos"
                    android:layout_marginEnd="@dimen/margem_campos"
                    android:layout_marginRight="@dimen/margem_campos"
                    android:hint="@string/altura"
                    android:inputType="number" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editeTextRaio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margem_campos"
                        android:layout_marginLeft="@dimen/margem_campos"
                        android:layout_marginTop="@dimen/margem_campos"
                        android:layout_marginEnd="@dimen/margem_campos"
                        android:layout_marginRight="@dimen/margem_campos"
                        android:hint="@string/raio" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPreco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margem_campos"
                            android:layout_marginLeft="@dimen/margem_campos"
                            android:layout_marginTop="@dimen/margem_campos"
                            android:layout_marginEnd="@dimen/margem_campos"
                            android:layout_marginRight="@dimen/margem_campos"
                            android:hint="@string/preco" />
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>